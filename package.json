{
  "name": "html-validator",
  "displayName": "HTML Checker",
  "description": "Checks HTML code using the W3C Markup Validation Service.",
  "version": "1.3.1",
  "author": "Narlotl",
  "publisher": "Narlotl",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Narlotl/html-validator"
  },
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "HTML Checker",
      "properties": {
        "html-validator.file-types": {
          "title": "File types",
          "type": "array",
          "default": [
            "html"
          ],
          "description": "File type associations for the extension to check."
        },
        "html-validator.validate-on-save": {
          "title": "Validate on save",
          "type": "boolean",
          "default": true,
          "description": "Check HTML on save."
        }
      }
    },
    "commands": [
      {
        "command": "html-validator.validate",
        "title": "Check HTML"
      }
    ],
    "keybindings": [
      {
        "command": "html-validator.validate",
        "key": "alt+shift+c"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "vnu-jar": "^23.4.11"
  }
}